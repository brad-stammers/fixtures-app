<div
  role="progressbar"
  aria-valuenow={{this.value}}
  aria-valuemin={{this.minValue}}
  aria-valuemax={{this.maxValue}}
  class="progress-bar {{if this.striped "progress-bar-striped"}} {{this.typeClass}} {{if this.animate (if (macroCondition (macroGetOwnConfig "isBS4")) "progress-bar-animated" "active")}}"
  ...attributes
  {{style width=this.percentStyleValue}}
>
  {{#if this.showLabel}}
    {{#if hasBlock}}
      {{yield this.percentRounded}}
    {{else}}
      {{this.percentRounded}}%
    {{/if}}
  {{else}}
    {{#if hasBlock}}
      <span class="sr-only">{{yield this.percentRounded}}</span>
    {{else}}
      <span class="sr-only">{{this.percentRounded}}%</span>
    {{/if}}
  {{/if}}
</div>